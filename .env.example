# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here
DJANGO_DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1
BASE_URL=http://localhost:8000
DJANGO_SETTINGS_MODULE=mobilize.settings

# Database Configuration
# For Railway + Supabase deployment, use DATABASE_URL instead of individual DB vars
# Format: postgresql://user:password@host:port/database?pgbouncer=true
DATABASE_URL=postgresql://postgres:your-password@db.your-project.supabase.co:5432/postgres?pgbouncer=true

# Legacy database vars (kept for compatibility)
DB_NAME=postgres
DB_USER=postgres
DB_PASS=your-password-here
DB_HOST=db.your-project.supabase.co
DB_PORT=5432

# Authentication Settings
AUTH_USER_MODEL=authentication.User

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-key

# Logging Configuration
LOG_LEVEL=INFO
LOG_TO_STDOUT=True
DJANGO_LOG_LEVEL=INFO

# Railway-specific settings (automatically provided, do not set manually)
# PORT=<provided by Railway>
# The PORT variable is automatically injected by Railway

# Static files configuration
STATIC_URL=/static/
STATIC_ROOT=staticfiles

# Optional: Cloudflare CDN for static files
# CLOUDFLARE_STATIC_URL=https://your-domain.com/static/
